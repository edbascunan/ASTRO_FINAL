---
import Icon from './Icon';

interface Props {
  id: string;
  title: string;
  description: string;
  projects: any[];
}

const { id, title, description, projects } = Astro.props;
---

<div class="bg-white rounded-xl shadow-lg overflow-hidden group hover:shadow-xl transition-shadow">
  <div class="p-6">
    <h3 class="text-2xl font-bold mb-3 group-hover:text-red-600 transition-colors">{title}</h3>
    <p class="text-gray-600 mb-4">{description}</p>
    <div class="flex justify-between items-center">
      <span class="text-sm text-gray-500">{projects.length} proyectos</span>
      <a
        href={`/proyectos/${id}`}
        class="inline-flex items-center space-x-2 text-red-600 hover:text-red-700 transition-colors"
      >
        <span>Ver proyectos</span>
        <Icon name="ArrowRight" className="w-4 h-4 group-hover:translate-x-1 transition-transform" client:load />
      </a>
    </div>
  </div>
</div>